@import 'nib/vendor'
@import 'fonts.styl'

azulito = #4393fa
grisesito = #2c2c2c
azulito_claro = #68a6ef
moradito = #9500b5
moradito_claro = #a839b5
rojito = #e23328

header
	background-color #2e363f
	color white
	position relative
	overflow hidden
	
.aviso
		background #ff303b
		color white 
		padding 0.5em !important
		border 4px solid #fad542 !important
		animation 0.5s parpadeo infinite
		
		strong
			color black
	
.controls
	animation 1s parpadeo_navigation 3
	.navigate-right
		border-left-color rojito !important
	.navigate-left
		border-right-color rojito !important
	.navigate-up
		border-bottom-color rojito !important
	.navigate-down
		border-top-color rojito !important
		
.home_link
	text-shadow 3px 3px 3px black
	&:hover
		text-shadow 3px 3px 3px black !important
		

		
.buttons
	margin-top 1.5em
	a
		padding 0.5em !important
		border 4px solid black !important
		color white !important
		background #4393fa
		transition 0.3s !important
		
		&:hover
			color white !important
			background #2e363f
			text-decoration none !important
	
.me
	figure
		margin 1em 0.5em 1em 1em

		img
			width 60px
			border-radius 7px
			
.name
	position absolute
	top 2em
	left 5.5em
	
	strong
		font-size 1.5em
		a
			color white
			&:hover
				color azulito
				
	.largo
		display none
		

.share
	iframe
		position absolute
		width 75px
		height 20px
		
		&:nth-child(1)
			top 1em
			right 0.5em
			
		&:nth-child(2)
			top 2.6em
			right 1em
			
		&:nth-child(3)
			top 4.2em
			right 0.5em
						
.home_init
	a
		position absolute
		top 0.9em
		left 4.4em
		font-size 2em
		text-decoration none
		color white
		&:hover
			color azulito
		strong
			display none
			
.yo
	.f_yo
		img
			border-radius 50%
			border 4px solid grisesito
			
.social_icons
		width 392px
		position relative
		margin 0 auto
		figure
			img
				float left
				margin-right 0.5em
				opacity .8
				animation 1s parpadeo infinite
				
			

 .abajo
	background azulito
	padding 0.2em
	display inline-block
	border 4px solid grisesito
	animation 1s parpadeo infinite
	color white
	
.antes
	a
		display inline-block
		
	.curso_online
		background azulito
		padding 0.3em
		color black !important
		border-radius 4px
		border 2px solid black
		transition 0.3s !important
		
		&:hover
			background azulito
			color white !important
			text-decoration none !important
			
.clases
	h2
		color white
		padding 0.5em !important
		border 4px solid white !important
		border-radius 10px
		
	.proceso
		background #fad542
		
.tags
	&:before
		content "< "	
		
	&:after
		content " >"
		
.border
	img
		border 2px solid black !important
		
@keyframes parpadeo_navigation
	40%
		transform scale(1.5)
		
	20% 60%
		transform scale(1)
		
@keyframes parpadeo
	40%
		transform scale(1.1)
		
	20% 60%
		transform scale(0.8)
		

@media screen and (min-width: 767px)
	.share
		iframe
			position absolute
			width 75px
			height 20px
			
			&:nth-child(1)
				top 2.5em
				right 11.7em
				
			&:nth-child(2)
				right 6.5em
				top 2.5em
				
			&:nth-child(3)
				top 2.5em
				right 1em
				

	.name
		.corto
			display none
		
		.largo
			display block
			
	.home_init
		a
			left 9.7em

		
		
		
		